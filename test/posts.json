{
  "Tests": [
    {
      "Convey": "setup handle for posting",
      "Zome": "clutter",
      "FnName": "newHandle",
      "Input": "buffaloBill",
      "Output": "%h2%",
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Convey": "Getting posts when they don't exist returns empty list",
      "Zome": "clutter",
      "FnName": "getPostsBy",
      "Input": ["buffaloBill"],
      "Output": [],
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Convey": "Post must have non-zero length",
      "Zome": "clutter",
      "FnName": "post",
      "Input": {
        "message": "",
        "stamp": 12345
      },
      "Exposure": "public",
      "ErrMsg": "Validation Failed"
    },
    {
      "Convey": "We can create a new post",
      "Zome": "clutter",
      "FnName": "post",
      "Input": {
        "message": "here is a test post",
        "stamp": 12345
      },
      "Output": "%h1%",
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Zome": "clutter",
      "FnName": "appProperty",
      "Input": "App_Key_Hash",
      "Output": "",
      "Exposure": "public",
      "Err": "",
      "Regexp": "Qm[a-zA-Z0-9]*"
    },
    {
      "Convey": "We can retrieve posts",
      "Comments": "Uses the link hash for the Anchor - %h6%",
      "Zome": "clutter",
      "FnName": "getPostsBy",
      "Input": ["buffaloBill"],
      "Output": [
        {
          "H": "%h1%",
          "author": "buffaloBill",
          "post": { "message": "here is a test post", "stamp": 12345 }
        }
      ],
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Convey": "We can modify a post",
      "Zome": "clutter",
      "FnName": "postMod",
      "Input": {
        "hash": "%h1%",
        "post": {
          "stamp": 12346,
          "message": "this is the modified post"
        }
      },
      "Output": "%h%",
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Convey": "We can retrieve modified posts",
      "Zome": "clutter",
      "FnName": "getPostsBy",
      "Input": ["buffaloBill"],
      "Output": [
        {
          "H": "%h2%",
          "author": "buffaloBill",
          "post": { "message": "this is the modified post", "stamp": 12346 }
        }
      ],
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Convey":
        "Trying to modify a post with the wrong key will fail validation",
      "Zome": "clutter",
      "FnName": "postMod",
      "Input": {
        "hash": "%h2%",
        "post": {
          "stamp": 12346,
          "message": "this is the modified post"
        }
      },
      "Exposure": "public",
      "ErrMsg": "Validation Failed"
    },
    {
      "Convey": "We can retrieve a single post",
      "Zome": "clutter",
      "FnName": "getPost",
      "Input": {
        "postHash": "%h2%"
      },
      "Output": {
        "H": "%h2%",
        "author": "buffaloBill",
        "post": { "message": "this is the modified post", "stamp": 12346 }
      },
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    },
    {
      "Convey": "Retrieving single post will return null if not found",
      "Zome": "clutter",
      "FnName": "getPost",
      "Input": {
        "postHash": "Qmbh1ncpRLL1Zjdm8FNwS29rcunyQLJEQN5SyRcER1Mbad"
      },
      "Output": null,
      "Exposure": "public",
      "Err": "",
      "Regexp": ""
    }
  ]
}
